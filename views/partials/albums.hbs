{{#each data}}
  <div class="album-results-wrap">
    <div class="album-input-wrap discogs">
      <h2>GENERAL INFO</h2>
      <div class="album-field-wrap">
        <label for="album-input-title">Title</label>
        <input type="text" name="title" class="good" id="album-input-title" value="{{title}}">
      </div>

      <div class="album-field-wrap">
        <label for="album-input-year">Year</label>
        <input type="text" name="year" class="good" id="album-input-year" value="{{year}}">
      </div>

      <div class="album-field-wrap">
        <label for="album-input-category">Category</label>
        <select name="category" class="bad" id="album-input-category">
          <option>Choose A Category</option>
          <option value="film">Film</option>
          <option value="game">Game</option>
          <option value="tv">TV</option>
        </select>
      </div>

      <div class="album-field-wrap">
        <label for="album-input-discogs_id">Discogs ID</label>
        <input type="text" name="discogs_id" class="good" id="album-input-discogs_id" value={{main_release}}>
      </div>
    </div>

    <div class="album-input-wrap spotify">
      <h2>MEDIA INFO</h2>
      <div class="media-button-wrap">
        <button class="media-button">Query Spotify</button>
        <button class="media-button">Check Result</button>
      </div>

      <div class="album-field-wrap">
        <label for="album-input-spotify_id">Spotify ID</label>
        <input type="text" name="spotify_id" class="neutral" id="album-input-spotify_id">
      </div>

      <div class="album-field-wrap">
        <label for="album-input-artwork">Artwork URL</label>
        <input type="text" name="year" class="neutral" id="album-input-artwork">
      </div>
    </div>
  </div>
{{/each}}
